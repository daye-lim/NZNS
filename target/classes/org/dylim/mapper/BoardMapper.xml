<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dylim.mapper.BoardMapper"> 
<!--

	select태그는 resultType(리턴타입)속성을 가지며 인터페이스에 선언된 메서드의 리턴타입과 동일하게 작성 必
	returnType속성의 값은 select 쿼리의 결과를 특정 클래스의 객체로 만들기 위해서 설정한다. 
	resultType= select된 결과를 어디에 담아서 보내줄지 설정
	
-->

	<!-- 게시글 목록 조회 -->
	<select id="getList" resultType="org.dylim.domain.BoardVO">
	 <!--  PK(bno)를 이용하도록 유도하는 조건 
	 CDATA은 XML에서 부등호를 사용하기 위해 이용함. 부등호를 태그<>로 인식할수도있어서  -->
		<![CDATA[select * from free_board where bno>0]]>
	</select>
	
	
	<!-- 게시글 목록 조회 (페이징) -->
	<select id="getListWithPaging" resultType="org.dylim.domain.BoardVO">
		<![CDATA[select bno, title, content, writer, regdate, updatedate, replyCnt, recommend
		from (select @rownum:=@rownum+1 as rn, bno, title, content, writer, regdate, updatedate, replyCnt, recommend
				from (select @rownum:=0) as tmp, free_board
				where 1=1]]>
				
		<include refid="criteria"></include>
				
		<![CDATA[order by bno desc )boardList where rn>(#{pageNum}-1)*#{amount} and rn<=#{pageNum}*#{amount}]]>
	</select>
	
	<!-- 전체 게시물의 수(total)를 구하는 메서드 -->
	<select id="getTotalCount" resultType="int">
		select count(*) from free_board where bno > 0
	</select>
	
	<!-- 목록과 데이터 개수 처리(동적SQL사용) -->
	<sql id="criteria">
	<!-- sql태그는 id라는 속성을 이용해서 필요한 경우에 동일한 SQL의 일부를 재사용가능하게함 -->
	 <trim prefix=" AND (" suffix=") " prefixOverrides="OR">
	  <foreach item='type' collection="typeArr">
	  
	   <!-- foreach를 이용해서 검색 조건들을 처리하는데 typeArr 속성 이용
		 MyBatis는 원하는 속성을 찾을 때 getTypeArr()과 같이 이름에 기반을 두어서 검색하기 때문에
		 Criteria에서 만들어둔 getTypeArr()결과인 문자열의 배열이 <foreach>의 대상이된다. -->
		 
		 
	   <trim prefix="OR">
	    <choose>
	    <!-- choose 안쪽의 동적SQL은 OR title...OR content...OR writer와 같은 구문을 만들어내므로 
			trim을 이용해서 맨 앞에서 생성되는 OR을 없애준다 -->
			
	     <when test="type == 'T'.toString()">
	      title like concat('%',#{keyword},'%')
	     </when>
	      <when test="type == 'C'.toString()">
	      content like concat('%',#{keyword},'%')
	     </when>
	      <when test="type == 'W'.toString()">
	      writer like concat('%',#{keyword},'%')
	     </when>	     
	     </choose>
	    </trim>
	  </foreach>
	  </trim>
	</sql>
	

	<!-- insert만 처리되고 생성된 PK값을 알 필요가 없는 경우 -->
	<insert id="insert">
		insert into free_board (title,content,writer)
		values (#{title}, #{content}, #{writer})
	</insert>

	<!-- insert만 처리되고 생성된 PK값을 알아야 하는 경우 -->
	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			select max(bno)+1 from free_board
		</selectKey>
		
		insert into free_board (bno,title,content,writer)
		values (#{bno},#{title}, #{content}, #{writer})
	</insert>
	
	
	<!-- 게시글 조회 -->
	<select id="read" resultType="org.dylim.domain.BoardVO">
		select * from free_board where bno = #{bno}
	</select>

	
	<!-- 게시글 삭제 -->
	<delete id="delete">
		delete from free_board where bno = #{bno}
	</delete>
	
	<!-- 게시글 수정 -->
	<update id="update">
		update free_board
		set title= #{title}, content=#{content}, writer = #{writer},
		updateDate = sysdate() where bno = #{bno}
	</update>
	
	<!-- 게시글 추천 -->
	<update id = "recommend">
	update free_board
	set recommend = recommend+1 
	where bno = #{bno} 
	 
	</update>

<!-- 댓글이 추가되면 반정규화된 tb1_board 테이블에 replyCnt칼럼이 업데이트 되어야하기 때문에
	updateReplyCnt구문 추가 -->
	<update id="updateReplyCnt">
	 update free_board set replyCnt = replyCnt + #{amount} where bno = #{bno}
	</update>
	
		<!-- 게시글 목록 조회 -->
	<select id="BestReviews" resultType="org.dylim.domain.BoardVO">
	 <!--  PK(bno)를 이용하도록 유도하는 조건 
	 CDATA은 XML에서 부등호를 사용하기 위해 이용함. 부등호를 태그<>로 인식할수도있어서  -->
		<![CDATA[select * from free_board where bno>0 order by recommend desc LIMIT 0, 3]]>
	</select>
	

</mapper>